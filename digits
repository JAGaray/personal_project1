int get_digit(int n, int l)
{
         int digit = (n/(int)pow(10, l)%10);
         return digit;
}

int number_digits(int n)
{
        int number_of_digits = 0;
        while(n){
                n /= 10;
                number_of_digits++;
                }
        return number_of_digits;
}

